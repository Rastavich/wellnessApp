<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="top|start"
    android:id="@+id/fragment_container">

    <fragment android:name="com.bignerdranch.android.wellnessapp.OptionFragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/list"
              tools:layout="@layout/fragment_option"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartrate_fragment"
        android:name="com.bignerdranch.android.wellnessapp.HeartRateFragment"
        tools:layout="@layout/fragment_heart_rate" />

</LinearLayout>
